@model List<DataLibrary.Models.Disease.Precaution>
@{
    ViewBag.Title = "All Symptoms";
    if (TempData["message"] != null)
    {
        <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["message"])));
        </script>
    }
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2><b>Result of Diagnoses</b></h2>
    </div>
    <div>

        @for (int i = 0; i < Model.Count(); i++)
        {
            int j = i + 1;
            <h3>@Html.DisplayFor(it => it[i].Disease)</h3> 

            <p><b>Precaution 1: </b>@Html.DisplayFor(it => it[i].precaution_1)</p>
            
            
            <p><b>Precaution 2: </b>@Html.DisplayFor(it => it[i].precaution_2)</p>
            
            <p><b>Precaution 3: </b>@Html.DisplayFor(it => it[i].precaution_3)</p>
            
            <p><b>Precaution 4: </b>@Html.DisplayFor(it => it[i].precaution_4)</p>
            
        }


        @*<input id="Submit1" type="submit" value="submit" />*@
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
