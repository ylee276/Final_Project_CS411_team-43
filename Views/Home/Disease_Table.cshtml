@model Final_Project.Models.Diseases

@{
    ViewBag.Title = "Search Disease";
}


@using (Html.BeginForm("GetDiseaseTable", "Home"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Searching For illness/disease</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Disease, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Disease, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            @ViewBag.data
            @*@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })*@
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
